@model IEnumerable<cle_spring_2021_courses.Models.StudentCourse>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Course List</title>
</head>
<body>

    <table>
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Course Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var studentcourse in Model)
            {
                <tr>
                    <td>@studentcourse.Student.FirstName @studentcourse.Student.LastName</td>
                    <td><a href="/Course/Details/@studentcourse.CourseId">@studentcourse.Course.Name</a></td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>

@{
}
